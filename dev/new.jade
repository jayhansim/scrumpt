extends inc/_layout.jade

block title
	title Add New Listing

block content
	include inc/_header.jade

	main(role="main")
		.container
			.new
				.new__form
					form
						h1 What's the deal?
						.form-group.form-group--radio
							.radio
								input(type="radio", name="dealType", id="meal")
								label(for="meal") Meal
							.radio
								input(type="radio", name="dealType", id="drink")
								label(for="drink") Drink
						.form-group
							label.control-label(for="description") Description
							input.form-control(type="text", placeholder="eg. $15 Steak or 2 for 1 Cocktails", name="description", id="description")
						.form-group
							label.control-label(for="conditions") Conditions
							input.form-control(type="text", placeholder="eg. with drinks purchase or 6-10pm", name="conditions", id="conditions")
						.form-group.form-group--checkbox
							.control-label Select available days
							.checkbox
								input(type="checkbox", name="monday", id="monday")
								label(for="monday") Mon
							.checkbox
								input(type="checkbox", name="tuesday", id="tuesday")
								label(for="tuesday") Tue
							.checkbox
								input(type="checkbox", name="wednesday", id="wednesday")
								label(for="wednesday") Wed
							.checkbox
								input(type="checkbox", name="thursday", id="thursday")
								label(for="thursday") Thu
							.checkbox
								input(type="checkbox", name="friday", id="friday")
								label(for="friday") Fri
							.checkbox
								input(type="checkbox", name="saturday", id="saturday")
								label(for="saturday") Sat
							.checkbox
								input(type="checkbox", name="sunday", id="sunday")
								label(for="sunday") Sun
						.form-group.form-group--image
							.select
								select.form-control
									option(value="", selected="selected", disabled="disabled") Select image
									option(value="image1") Drinks_3.jpg
									option(value="image2") Drinks_4.jpg
							span or
							.upload-image
								button.btn.btn--grey(type="button") Upload Image
						.form-group.form-group--submit
							//- for update/edit, remove the disabled attribute
							button.btn(type="submit", disabled="disabled") Create Tile!

				.new__preview

					mixin list__item__new(title, titleDesc, location, city, distance, likesNum)
						li.list__item.list__item--new
							.deal&attributes(attributes)
								h2.deal__title= title
									span= titleDesc
								.deal__info
									.deal__info__location
										.location= location
											i= city
									ul.deal__info__more
										li
											i.icon__distance
											= distance
										li
											i.icon__likes
											= likesNum

					ul
						+list__item__new("$5 drinks happy hour", "5 - 7pm weekdays", "The Morrison Hotel", "Sydney", "50m", "16")(style="background-image: url(img/image.jpg)")














